{{#if resume.work.length}}
<div class="container work-container">
    {{> title value="Experience"}}

    {{#each resume.work}}
        <section class="item">
            {{> section-header }}

            {{#if position}}
				<h4>{{position}}</h4>
            {{/if}}

            {{#if summary}}
				<ul><li class="summary">{{{summary}}}</li></ul>
            {{/if}}

            {{#if highlights.length}}
				<ul>
					{{#each highlights}}
					<li>{{{.}}}</li>
					{{/each}}
				</ul>
            {{/if}}
        </section>
    {{/each}}
</div>
{{/if}}