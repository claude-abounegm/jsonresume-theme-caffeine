{{#if resume.education.length}}
<div class="container education-container">
    {{> title value="Education"}}

    {{#each resume.education}}
        <section class="item">
            {{> section-header name=this.institution }}
            
			{{#if gpa}}
            <h5 class="pull-right"><b>Overall GPA: {{gpa}}</b></h5>
            {{/if}}
			
            <h4>
				{{#if studyType}}
					{{studyType}}
				{{/if}}
				
				{{#if majors.length}}
					{{#each majors}}
						<div class="education-area">> <b>{{name}}</b> {{#if this.gpa}}(Major GPA: {{this.gpa}}){{/if}}</div>
					{{/each}}
				{{else if area}}
					<div class="education-area">
						{{area}}
					</div>
				{{/if}}
			</h4>

            {{#if courses.length}}
            <ul class="two-column">
                {{#each courses}}
                <li>{{.}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </section>
    {{/each}}
</div>
{{/if}}