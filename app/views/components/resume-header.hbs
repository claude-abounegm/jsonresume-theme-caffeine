{{#resume.basics}}
<header class="resume-header clearfix">
    <div class="profile-header {{#if picture}}pull-left{{else}}center-text{{/if}}">
		<h1>{{name}}</h1>
        <h2>{{label}}</h2>
    </div>
	
	{{#if picture}}
		<div class="profile-pic pull-right">
			<img src="{{picture}}" alt="profile-pic">
		</div>
	{{/if}}
</header>
{{/resume.basics}}